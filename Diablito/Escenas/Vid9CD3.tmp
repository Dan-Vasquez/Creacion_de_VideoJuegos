script/source = "extends Area2D

const SPEED = 100

var follow_player = false
var texture = load(\"res://Recursos/Atun.png\")

const healing_sprites = []

@onready var player = get_node(\"/root/Alcantarilla/Diablito\")

func _ready():
	$Sprite2D.texture = \"\"
	
func _process(delta):
	
	if follow_player:
		position += global_position.direction_to(player.global_position) * SPEED * delta

func _on_body_entered(_body):
	follow_player = true
	$AnimationPlayer.pause()


func _on_colision_body_entered(body):
	Globals.weapon_in_use = 1
	Globals.visible_weapon = true
	body.change_weapon()
	queue_free()
"

