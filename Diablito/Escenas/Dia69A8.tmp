[sub_resource type="GDScript" id="GDScript_3ude0"]
script/source = "extends CharacterBody2D

signal player_deleted

const SPEED = 100
const PARTICLES = preload(\"res://Escenas/Sangre.tscn\")

var direction

@onready var character_sprite = $Sprite2D
@onready var OccluderDereho = $OccluderDereho
@onready var OccluderIzquierdo = $OccluderIzquierdo

func _process(_delta):

	direction = Input.get_vector(\"A\",\"D\",\"W\",\"S\")
	velocity = direction  * SPEED 
	
	animation_character()
	
	move_and_slide()

func animation_character():
	
	if velocity.length() > 0:
		$AnimationPlayer.play(\"Movimiento\")
	else:
		$AnimationPlayer.play(\"Parado\")
	
	if direction.x < 0:
		character_sprite.flip_h = true
		OccluderDereho.visible = false
		OccluderIzquierdo.visible = true

	else:
		character_sprite.flip_h = false
		OccluderDereho.visible = true
		OccluderIzquierdo.visible = false


func _on_heridas_body_entered(body):
	if body.has_method(\"harm\"):
		
		var new_particles = PARTICLES.instantiate()
		
		new_particles.emitting = true
		get_parent().add_child(new_particles)
		new_particles.global_position = global_position
		
		Globals.health_player -= body.harm()
		if Globals.health_player <= 0:
			player_deleted.emit()
			#queue_free()
		
"

